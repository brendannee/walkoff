extends layout

block content
  #driving.col-md-4.col-md-offset-2
    h3 In the last 7 days
    .row.statRow
      .stat(data-trips-under-two-miles)
      .statLabel Trips Under 2 Miles
    .row.statRow
      .stat(data-driving-duration)
      .statLabel Minutes Driving
  #moves.col-md-4
    .row.statRow
      .stat(data-steps)
      .statLabel Steps
      .stat(data-percent-of-goal)
      .statLabel Percent of Goal
      .stat(data-percent-of-goal-no-driving)
      .statLabel Percent of Goal You Would Be At If You Didn't Drive For Trips Under 2 Miles
      .stat(data-walking-distance)
      .statLabel Miles Walked
      .stat(data-calories)
      .statLabel Calories

  #trips
  .loading